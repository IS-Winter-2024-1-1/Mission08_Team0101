@{
    ViewData["Title"] = "Current ToDo List";
    ViewData["Background"] = "/image/bg-callout.jpg";
}
@model List<Mission08_Team0101.Models.Task>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col col-lg-6">
            <h3>Time Management Matrix</h3>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>Urgent</th>
                        <th>Not Urgent</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Important</th>
                        <!-- Quadrant 1: Urgent & Important -->
                        <td>
                            <table>
                                @foreach (var task in Model.Where(t => t.Quadrant == "1"))
                                {
                                    <tr>
                                        <td style="padding-right: 20px">@task.TaskName</td>
                                        <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a></td>
                                        <td>
                                            <form method="post">
                                                <input type="hidden" name="TaskId" value="@task.TaskId" />
                                                <button type="submit">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </td>
                        <!-- Quadrant 2: Not Urgent & Important -->
                        <td>
                            <table>
                                @foreach (var task in Model.Where(t => t.Quadrant == "2"))
                                {
                                    <tr>
                                        <td style="padding-right: 20px">@task.TaskName</td>
                                        <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a></td>
                                        <td>
                                            <form method="post">
                                                <input type="hidden" name="TaskId" value="@task.TaskId" />
                                                <button type="submit">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <th>Not Important</th>
                        <!-- Quadrant 3: Urgent & Not Important -->
                        <td>
                            <table>
                                @foreach (var task in Model.Where(t => t.Quadrant == "3"))
                                {
                                    <tr>
                                        <td style ="padding-right: 20px">@task.TaskName</td>
                                        <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a></td>
                                        <td>
                                            <form method="post">
                                                <input type="hidden" name="TaskId" value="@task.TaskId" />
                                                <button type="submit">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </td>
                        <!-- Quadrant 4: Not Urgent & Not Important -->
                        <td>
                            <table>
                                @foreach (var task in Model.Where(t => t.Quadrant == "4"))
                                {
                                    <tr>
                                        <td style="padding-right: 20px">@task.TaskName</td>
                                        <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a></td>
                                        <td>
                                            <form method="post">
                                                <input type="hidden" name="TaskId" value="@task.TaskId" />
                                                <button type="submit">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
